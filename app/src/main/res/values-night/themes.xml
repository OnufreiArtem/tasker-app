<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tasker" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/red_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/red_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/dark_blue</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/dark_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/Theme.Tasker.DarkActionBar</item>


        <item name="inProgressColor">@color/white</item>
        <item name="doneColor">@color/green_200</item>
        <item name="missedColor">@color/red_500</item>

        <item name="semiTransparentHintColor">@color/transparent_light_grey</item>
        <item name="paragraphColor">@color/light_blue</item>
        <item name="itemOneTextColor">@color/light_blue</item>
        <item name="itemSecondTextColor">@color/light_blue</item>
        <item name="itemArchiveBcg">@color/darker_blue</item>

        <item name="homeTitleColor">@color/light_blue</item>
    </style>

    <style name="Theme.Tasker.SemiTransparentText">
        <item name="android:textColor">?attr/semiTransparentHintColor</item>
    </style>

    <style name="Theme.Tasker.DarkActionBar" parent="Theme.Tasker">
        <item name="android:background">@color/blue_700</item>

    </style>

    <style name="Theme.Tasker.Paragraph" parent="Theme.Tasker">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Tasker.EditText" parent="Theme.Tasker">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:hint">?attr/semiTransparentHintColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Tasker.ArchiveItem.Text" parent="Theme.Tasker">
        <item name="android:textColor">@color/light_blue</item>
    </style>


</resources>