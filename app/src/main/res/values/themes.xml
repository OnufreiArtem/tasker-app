<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tasker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/red_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/red_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>

        <item name="inProgressColor">@color/white</item>
        <item name="doneColor">@color/green_200</item>
        <item name="missedColor">@color/red_500</item>
        <item name="semiTransparentHintColor">@color/transparent_grey</item>
    </style>

    <declare-styleable name="TaskerColors">
        <attr name="inProgressColor" format="color"/>
        <attr name="doneColor" format="color"/>
        <attr name="missedColor" format="color"/>
        <attr name="semiTransparentHintColor" format="color"/>
    </declare-styleable>


    <style name="Theme.Tasker.SemiTransparentText">
        <item name="android:textColor">@color/transparent_grey</item>
    </style>

    <style name="Theme.Tasker.ActionBar" parent="Theme.Tasker">
        <item name="android:background">@color/green_200</item>
    </style>

    <style name="Theme.Tasker.Paragraph" parent="Theme.Tasker">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Tasker.EditText" parent="Theme.Tasker">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Tasker.ArchiveItem" parent="Theme.Tasker">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Tasker.ArchiveItem.Text" parent="Theme.Tasker">
        <item name="android:textColor">@color/dark_blue</item>
    </style>
</resources>