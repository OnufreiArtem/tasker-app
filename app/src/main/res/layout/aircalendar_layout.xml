<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lodbrock.tasker.aircalendar.CalendarView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aircalendar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/aircalendar_header_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_left"
            android:clickable="true"
            android:contentDescription="Previous page"
            android:focusable="true"
            android:scaleY="2"
            android:scaleX="1.8"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_left"
            app:tint="@color/dark_blue" />


        <TextView
            android:id="@+id/aircalendar_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Month, Year"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/aircalendar_header_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="Next page"
            android:focusable="true"
            android:scaleY="2"
            android:scaleX="1.8"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_right"
            app:tint="@color/dark_blue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/aircalendar_week_days_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mon"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tue"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wed"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thu"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fri"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sat"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

        <TextView
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sun"
            android:textAllCaps="true"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <GridView
        android:id="@+id/aircalendar_month_days_container"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:numColumns="7"
        tools:listitem="@layout/aircalendar_day_layout"
        android:stretchMode="columnWidth" />


</LinearLayout>