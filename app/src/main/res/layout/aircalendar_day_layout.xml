<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/daySelectedBackground"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/aircalendar_selection_circle_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aircalendar_day_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="?attr/paragraphColor"
        android:textSize="16sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/daySelectedBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/daySelectedBackground" />

    <ImageView
        android:id="@+id/aircalendar_day_img"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/aircalendar_cirlce_under_number_desc"
        app:layout_constraintEnd_toEndOf="@+id/daySelectedBackground"
        app:layout_constraintStart_toStartOf="@+id/daySelectedBackground"
        app:layout_constraintTop_toBottomOf="@+id/aircalendar_day_text" />

</androidx.constraintlayout.widget.ConstraintLayout>

